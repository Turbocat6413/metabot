{
	"manifest_version": 2,
	"name": "MetaBot for Twitter",
	"version": "0.5.23",
	"description": "Highlight known Kremlin bots on Twitter.",
	"author": "antibot4navalny",
	"content_scripts": [
	  {
		"matches": ["https://*.twitter.com/*"],
		"js": ["purify.min.js", "url_templates.js", "common.js", "bot_accounts.js", "metabot.js"],
		"run_at": "document_idle"
	  },
	  {
		"matches": ["https://*.twitter.com/*"],
		"js": ["url_templates.js", "common.js", "save_usage_telemetry.js"],
		"run_at": "document_end"
	  }
	],
	"background": {
	    "scripts": ["url_templates.js", "common.js", "background.js", "hot-reload.js"],
	    "persistent": false
	},
	

	"permissions": [
		"storage"
	]
}
